    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/slant_left_bg" >

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="@drawable/slant_left_bg">

        <TableRow
            style="@style/Row">
        	<TextView
        	    style="@style/MenuText.Title"
            	android:text="@string/info_dbquickmenu" />
        </TableRow>
        <View style="@style/Row.Line" />
        <View style="@style/Row.Line" />
        <View style="@style/Row.Line" />
        <View style="@style/Row.Line" />
        <View style="@style/Row.Line" />
        <View style="@style/Row.Line" />
        <View style="@style/Row.Line" />
        <View style="@style/Row.Line" />
        <View style="@style/Row.Line" />
        <View style="@style/Row.Line" />
        <View style="@style/Row.Line" />
        <View style="@style/Row.Line" />
        <View style="@style/Row.Line" />
        <View style="@style/Row.Line" />
        <View style="@style/Row.Line" />
        <!-- Render Mode -->
        <TableRow
            style="@style/Row.Click">
        	<TextView
            	style="@style/MenuText.Row"
            	android:text="@string/info_rendermode"
            	android:layout_weight="0.5"
            	android:drawableLeft="@drawable/onebit_23" />
        	<TextView
        	    android:id="@+id/info_rendermode"
            	style="@style/MenuText.Row"
            	android:text="Canvas"
            	android:layout_weight="0.5" />
        </TableRow>
        <View style="@style/Row.Line" />
        <TableRow
            style="@style/Row.Click">
        	<TextView
            	style="@style/MenuText.Row"
            	android:text="@string/info_dosmem"
            	android:layout_weight="0.5"
            	android:drawableLeft="@drawable/onebit_22" />
        	<TextView
        	    android:id="@+id/info_dosmem"
            	style="@style/MenuText.Row"
            	android:text="8 MB"
            	android:layout_weight="0.5" />
        </TableRow>
        <View style="@style/Row.Line" />
        <!-- DB Manager -->
        <TableRow
            style="@style/Row.Click">
        	<TextView
            	style="@style/MenuText.Row"
            	android:text="@string/info_manager"
            	android:layout_weight="0.5"
            	android:drawableLeft="@drawable/dbturbo" />
        	<TextView
        	    android:id="@+id/info_manager"
            	style="@style/MenuText.Row"
            	android:text="1.0.23"
            	android:layout_weight="0.5" />
        </TableRow>
        <View style="@style/Row.Line" />
        <!-- Dosbox Turbo -->
        <TableRow
            style="@style/Row.Click">
        	<TextView
            	style="@style/MenuText.Row"
            	android:text="@string/info_version"
            	android:layout_weight="0.5"
            	android:drawableLeft="@drawable/dbturbo"  />
        	<TextView
        	    android:id="@+id/info_version"
            	style="@style/MenuText.Row"
            	android:text="2.0.0"
            	android:layout_weight="0.5" />
        </TableRow>
        <View style="@style/Row.Line" />
        </TableLayout>
    </ScrollView>
